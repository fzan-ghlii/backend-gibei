// Ini adalah file skema Prisma Anda.
// Pelajari lebih lanjut: https://pris.ly/d/prisma-schema

// Mendefinisikan generator client Prisma (untuk TypeScript)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- USER & ROLE ---
enum Role {
  USER
  ADMIN
  MASTER_ADMIN
}

model User {
  id                Int                 @id @default(autoincrement())
  nama              String
  email             String              @unique
  password          String
  role              Role                @default(USER)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relasi
  articles          Article[]
  eventRegistrations EventRegistration[]
  spmRegistrations  SpmRegistration[]
}

// --- KONTEN ---
model Article {
  id         Int      @id @default(autoincrement())
  title      String   @unique
  content    String   @db.Text
  imageUrl   String
  category   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  authorId   Int
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

enum GalleryCategory {
  FOTO
  VIDEO
}

model GalleryItem {
  id          Int             @id @default(autoincrement())
  title       String
  category    GalleryCategory
  imageUrl    String
  videoUrl    String?
  createdAt   DateTime        @default(now())
}

// --- FASE 3: EVENT & SPM ---

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  date        DateTime // Tanggal pelaksanaan
  location    String
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi: Event punya banyak pendaftar
  registrations EventRegistration[]
}

model Spm {
  id          Int      @id @default(autoincrement())
  title       String   // Contoh: "SPM Level 1 - Batch 5"
  description String   @db.Text
  schedule    DateTime // Jadwal
  quota       Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  registrations SpmRegistration[]
}

// --- FASE 3: REGISTRASI ---

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

model EventRegistration {
  id        Int                @id @default(autoincrement())
  userId    Int
  eventId   Int
  status    RegistrationStatus @default(PENDING)
  createdAt DateTime           @default(now())

  // Relasi
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Pastikan satu user hanya bisa daftar satu kali per event
  @@unique([userId, eventId])
}

model SpmRegistration {
  id        Int                @id @default(autoincrement())
  userId    Int
  spmId     Int
  
  // Data Khusus SPM (sesuai Form di Vue)
  nim       String
  origin    String             // Asal Pendaftar (Fakultas Ekonomi, Publik, dll)
  phone     String
  
  status    RegistrationStatus @default(PENDING)
  createdAt DateTime           @default(now())

  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  spm       Spm                @relation(fields: [spmId], references: [id], onDelete: Cascade)

  @@unique([userId, spmId])
}